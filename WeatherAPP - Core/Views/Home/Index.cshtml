@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">WeatherAPP</h1>
    <hr />
    <div class="row">
        <div class="text-center">
            <h1 class="display-4">Have a Sunny Day!</h1>
            <br />
            <label for="usr">Insert your City</label>
            <input type="text" class="form-control" id="usr" text-center>
            <br />
            <input type="button" class="btn btn-info" id="WeatherSearch" value="Check the weather!" />
        </div>


        @section Scripts {
            <script type="text/javascript">
        $("#WeatherSearch").click(function () {
            var txtVal = $("#usr").val();
            window.location = "@Url.Action("WeatherData","Home")" +
                "/" + txtVal;
           
        });
            </script>
        }

        <div class="col-6">
            <h4>Zaloguj się za pomocą Facebook'a aby zapisać swoje wyszukiwania</h4>
            <hr />
            <button class="btn btn-success">
                <i class="fab fa-facebook"></i>
                <span>Zaloguj</span>
            </button>

            <button class="btn btn-danger">
                <i class="fab fa-facebook"></i>
                <span>Zarejestruj</span>
            </button>

        </div>
    </div>
</div>



