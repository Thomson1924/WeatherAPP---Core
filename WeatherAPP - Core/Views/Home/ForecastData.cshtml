@model ForecastData
@{ Layout = "_Layout"; ViewBag.Title = "Forecast";}

@try
{
    <h2>Weather Info </h2>
   


    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Temperature</th><th>Humidity</th><th>Perceived Temperature</th><th>Wind</th><th>Pressure</th></tr></thead>
        <tbody>

            <tr>
               
                <td>@Model.Temp °C</td>
                <td>@Model.Humidity %</td>
                <td>@Model.Feels_like °C</td>
                <td>@Model.Speed Km/h</td>
                <td>@Model.Pressure</td>
                

            </tr>


        </tbody>
    </table>
    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>
    <br />
}
catch
{

    <h1>I am sorry, I can't find your city :(</h1>

    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>}