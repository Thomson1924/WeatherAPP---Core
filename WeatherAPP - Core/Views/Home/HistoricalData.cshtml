@model WeatherAPP___Core.Models.HistoricalData.Rooth
@{ Layout = "_Layout"; ViewBag.Title = "Historical";}

@try
{
    <h2>Weather Info </h2>



    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Day</th><th>Mounth</th><th>Temp Record MIN</th><th>Temp Record Max</th><th>Pressure MAX</th><th>Wind MIN</th><th>Wind MAX</th></tr></thead>
        <tbody>
            @foreach (var item in Model.result)
            {
                <tr>

                    <td>@item.day</td>
                    <td>@item.month</td>
                    <td>@item.temp.record_min </td>
                    <td>@item.temp.record_max</td>
                    <td>@item.pressure.max</td>
                    <td>@item.wind.min</td>
                    <td>@item.wind.max</td>
                    
                </tr>
            }

        </tbody>
    </table>
    <br />
    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>
    <br />
}
catch
{

    <h1>I am sorry, I can't find your city :(</h1>

    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>}